<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_word"
        android:inputType="textAutoComplete"
        android:padding="@dimen/small_padding"
        android:layout_marginBottom="@dimen/big_padding"
        android:layout_marginTop="@dimen/big_padding"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_definiton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_definition"
        android:inputType="textAutoComplete"
        android:padding="@dimen/small_padding"
        android:layout_marginBottom="@dimen/big_padding"
        android:layout_marginTop="@dimen/big_padding"
        android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/part_of_speech_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/noun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noun"/>

            <RadioButton
                android:id="@+id/adjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjective"/>
            <RadioButton
                android:id="@+id/adverb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adverb"/>

            <RadioButton
                android:id="@+id/preposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preposition"/>
        </RadioGroup>



    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/button_save"
        android:textColor="@color/buttonLabel" />

</LinearLayout>