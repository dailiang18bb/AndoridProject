<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/animal_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/animal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/bttn_container"
        android:layout_toEndOf="@+id/animal_icon"
        android:text="@string/bird_description"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/bttn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">
    <Button
        android:id="@+id/next_fact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_fact"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:id="@+id/delete_fact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_fact"
        android:focusableInTouchMode="false"
        android:focusable="false"/>
    </LinearLayout>
</RelativeLayout>